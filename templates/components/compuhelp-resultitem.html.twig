{% props title = null, tokenparts = null, count = null, href = null, searchterm = null, langSelector = "Français" %}

<li class="result-item">
	<h5 class="search_title">
		<a target="_top" href="{{href}}" class="search_link">{{title}}</a>
	</h5>
	<p>...{% for token in tokenparts %}{% if token|lower == searchterm %}<span class="search">{{token}}</span>{% else %}{{token}}{% endif %}{% endfor %}...</p>
	<p class="match">
{% if langSelector == "Français" %}
		<em>Terms matched: {{count}} - URL: {{href}}</em>
{% else %}
		<em>Termes correspondant: {{count}} - URL: {{href}}</em>
{% endif %}
	</p>
</li>