{% extends 'email/emailBase.html.twig' %}
{% block content %}
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Notification
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>Hi, {{name}} left a message for you at compuhelp-enterprises.ca</p>
        </columns>
    </row>
    <row>
        <columns>
            <a href="mailto:{{fromEmail}}" target="_blank" subject="Re: {{subject}}" body="{{message}}">Reply</a>
        </columns>
    </row>
    <row>
        <columns>
            <p>{{message}}</p>
        </columns>
    </row>
    <row>
        <columns>
            <p>This is an automatically generated email, please do not reply.</p>
        </columns>
    </row>
{% endblock %}